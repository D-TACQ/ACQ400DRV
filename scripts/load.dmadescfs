/sbin/insmod dmadescfs.ko
echo 9 >/proc/sys/kernel/printk
echo file dmadescfs_drv.c +p > /dev/ddc

major=$(grep dmadesc /proc/devices | awk '{ print $1 }')

for buf in 0 1 2 3
do
	mknod /dev/dmadesc.$buf c $major $buf
done

