#!/bin/sh


echo KNOBS INIT 01
[ ! -e /var/run ] && (mkdir /var/run; echo mkdir /var/run required )
BADNFSPERMS="/usr/local/bin/acq400_knobs /usr/local/bin/streamtonowhere"
echo permissions fixup for procServ .. ok, but why now\?
ls -l ${BADNFSPERMS}
chmod 555 ${BADNFSPERMS}
ls -l ${BADNFSPERMS}
echo KNOBS_INIT 10
stop_knob_servers() {
	for dir in /etc/acq400/[0-9]*
	do	
		site=$(basename $dir)
		pidf=/var/run/knobs$site.pid
		if [ -e $pidf ]; then
			kill $(cat $pidf)
			rm $pidf
		fi
		pidf2=/var/run/acq400_knobs.$site.pid
		if [ -e $pidf2 ]; then
			rm $pidf2
		fi
	done
}

spawn_knob_servers() {
	for dir in /etc/acq400/[0-9]*
	do
		site=$(basename $dir)
		pidf=/var/run/knobs$site.pid
		# sites at 4220 auto calc by acq400_knobs		
		let lport=4820+$site
		cmd="/usr/local/bin/procServ -p $pidf  \
			--restrict -q $lport \
			/usr/local/bin/acq400_knobs -s $site"
		echo $cmd
		$cmd
	done
	
	for dir in /etc/acq400/[0-9]*
	do
		site=$(basename $dir)
		pidf2=/var/run/acq400_knobs.$site.pid
		let pollcat=0
		while [ ! -e  $pidf2 ]; do
			if [ "${pollcat%*0}" != "$pollcat" ]; then
				echo $pollcat: waiting for $pidf2
			fi
			let pollcat=$pollcat+1
			if [ $pollcat -gt 60 ];then
				echo WARNING: failed to see $pidf2, continuing
				break
			fi
			usleep 100000
		done		
	done	
}


case "$1" in
start|"")
	stop_knob_servers
	spawn_knob_servers;;
stop)
	stop_knob_servers;;
*)
	echo "usage acq400_knobs.init start\|stop";;
esac
