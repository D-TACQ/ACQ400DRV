#!/bin/sh

export SITE=${SITE:-2}
MODE=${1:-2}

set.site SITE gpg_enable 0
/usr/local/epics/scripts/gpg_monitor 1

stl2gpg  /dev/acq400.$SITE.gpg <<EOF
1000,0f
2000,0
3000,0f
4000,0
5000,0f
6000,0
7000,1f
8000,1
EOF

# Set GPG to LOOP and Enable GPG
set.site $SITE gpg_mode $MODE
set.site $SITE gpg_enable 1

