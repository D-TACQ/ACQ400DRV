#!/bin/sh
# changes KNOBS in wr.sh
KNOB=$(basename $0)
if [ "x$1" != "x" ]; then
	grep -q ^$KNOB=. /dev/shm/wr.sh
	if [ $? -eq 0 ]; then
		sed -i  -e "s/^$KNOB=.*$/$KNOB=$1/" /dev/shm/wr.sh
	else
		echo "$KNOB=$1" >> /dev/shm/wr.sh
	fi
else
	sed -ne "/^$KNOB=/p" /dev/shm/wr.sh | sed -e "s/^$KNOB=//"
fi
