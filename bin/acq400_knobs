#!/bin/sh

SITE=${1:-0}
SDIR=${2:-/etc/acq400/$SITE}
STATUS=0
USE_PROMPT=0
HROOT=/usr/share/doc

if [ -e /etc/sysconfig/acq400_knobs.cfg ]; then
	# possible override USE_PROMPT
	source /etc/sysconfig/acq400_knobs.cfg
fi

if [ -e $SDIR ]; then
	cd $SDIR
else
	/usr/bin/logger -t acq400_knobs ERROR $SDIR not found
	sleep 100
	exit 1
fi

do_wildcard_query() {
	for file in $* 
	do
		if [ -x $file ]; then
			echo $file $(exec ./$file)
		else
			echo $file $(cat $file)
		fi
	done
}
do_site_knob() {
	kb=$1; shift; val="$*"
	
	if [ ! -e $kb ]; then
		echo ERROR: \"$kb\" does not exist
	elif [ -x $kb ]; then
		./$kb $val
		STATUS=$?
	elif [ ! -z $val ]; then
		echo $val > $kb
		STATUS=$?
	else
		cat $SDIR/$key
		STATUS=$?
	fi
}

help() {
	ls -1 
}

help2() {
	for file in $(ls -1)
	do
		echo $file:
		HTEXT="$(grep -m1 ^$file $HROOT/acq400_help* | cut -f2-)"
		if [ $? -eq 0 ]; then
			echo "	$HTEXT";
		else
			echo $file;
		fi
	done
}


while [ 1 ]; do
	if [ $USE_PROMPT -ne 0 ]; then
		echo -n "acq400.$SITE:$STATUS> "
		STATUS=0
	fi
	read cmd v1 v2 v3 v4 v5
	if [ $? -ne 0 ]; then
		echo END
		exit 1
	elif [ -z $cmd ]; then
		continue
	fi
	kb=${cmd%%=*}
	if [ -z $v1 ]; then
		echo $cmd | grep -q =
		if [ $? -eq 0 ]; then
			v1=${cmd##*=}
		fi
	fi

	strip=$(echo $kb | tr -d \*\?)
	if [ "x${kb}" != "x${strip}" ]; then
		do_wildcard_query "${kb}"
	else
		case "x${kb}" in
		xprompt)			
			case $v1 in
			on)
				USE_PROMPT=1;;
			off)
				USE_PROMPT=0;;
			esac;;
		xhelp)
			help;;
		xhelp2) 
			help2;;
		x*)
#	echo do_site_knob $kb $v1 $v2 $v3 $v4 $v5
		        do_site_knob $kb $v1 $v2 $v3 $v4 $v5;;
		esac
	fi
done
